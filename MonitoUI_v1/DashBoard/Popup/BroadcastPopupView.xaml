    <Grid Background="#FFF1EBF5" OpacityMask="Black" Height="400" Width="550" Margin="25">
        <Grid.Effect>
            <DropShadowEffect
                BlurRadius="15"
                Color="Black"
                Direction="-90"
                RenderingBias="Quality"
                ShadowDepth="2" Opacity="0.5" />
        </Grid.Effect>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF3C3D5E" Offset="0"/>
                    <GradientStop Color="#FF1C1B1F" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid VerticalAlignment="Center" Height="30" Margin="10,0,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding ViewName, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:BroadcastPopupView}}}" VerticalAlignment="Center" Foreground="White"  FontSize="14" FontWeight="Bold"/>

                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Style="{StaticResource PopupButtonStyle}" Grid.Column="0" Command="{Binding SaveCommand}" CommandParameter="{Binding Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:BroadcastPopupView}}}">
                        <Image Source="{Binding CheckImage}"/>
                    </Button>
                    <Button Grid.Column="2"  Style="{StaticResource PopupButtonStyle}" Command="{Binding CloseCommand}" CommandParameter="{Binding Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:BroadcastPopupView}}}">
                        <Image Source="{Binding CloseImage}"/>
                    </Button>
                </Grid>
            </Grid>

        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10,5,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0" Style="{StaticResource BroadcastComboBoxStyle}">

                </ComboBox>


                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <ToggleButton Content="자동방송" IsChecked="{Binding AutoBroadcast}" Style="{StaticResource BroadcastToggleButtonStyleA}"  FontFamily="Noto Sans KR" Width="100" FontWeight="Bold"/>
                    <ToggleButton Content="라이브방송" IsChecked="{Binding LiveBroadcast}" Style="{StaticResource BroadcastToggleButtonStyleB}"  FontFamily="Noto Sans KR" Width="100" FontWeight="Bold"/>
                    <ToggleButton Content="인터폰 통화" IsChecked="{Binding ComBroadcast}" Style="{StaticResource BroadcastToggleButtonStyleC}"  FontFamily="Noto Sans KR" Width="100" FontWeight="Bold"/>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Background="White" Margin="10,0,10,10" CornerRadius="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.5"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Background="#FFF1ECF3"/>

                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Audio Input" VerticalAlignment="Center" Margin="20,0,0,0" FontFamily="Noto Sans KR Medium" Foreground="Black"/>

                    <Grid Grid.Column="0" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition />
                            <RowDefinition Height="70"/>
                        </Grid.RowDefinitions>
                        <StackPanel  Grid.Row="0" Height="50" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
                            <RadioButton Content="MIC" GroupName="audio" Style="{StaticResource BroadcastRadioButtonStyle}" VerticalAlignment="Center" FontSize="15" Foreground="#FF909090" Margin="0,0,30,0"/>
                            <RadioButton Content="LINE" GroupName="audio" Style="{StaticResource BroadcastRadioButtonStyle}" VerticalAlignment="Center" FontSize="15" Foreground="#FF909090" Margin="0,0,30,0"/>
                            <RadioButton Content="FILE" GroupName="audio" Style="{StaticResource BroadcastRadioButtonStyle}" VerticalAlignment="Center" FontSize="15" Foreground="#FF909090"/>
                        </StackPanel>

                        <Image Grid.Row="1" Source="pack://application:,,,/Protocol;component/Image/ventilation_icon.png" Height="80" Width="80"/>

                        <Grid Grid.Row="2" VerticalAlignment="Center" Margin="20,0,20,0" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Volume" VerticalAlignment="Center" Foreground="Black"/>

                            <Slider Grid.Row="1" Style="{StaticResource BroadcastSliderStyle}" VerticalAlignment="Top" Minimum="0" Maximum="50" TickFrequency="5" Value="20"/>
                            <TextBlock Grid.Row="1" Text="0" VerticalAlignment="Top" Foreground="#FFA1A1A1" Margin="6.5,15,0,0" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="1" Text="50" VerticalAlignment="Top" Foreground="#FFA1A1A1" Margin="0,15,6.5,0" HorizontalAlignment="Right"/>
                        </Grid>
                    </Grid>

                    <TextBlock Grid.Column="2" Grid.Row="0" Text="음원 선택" VerticalAlignment="Center" Margin="20,0,0,0" FontFamily="Noto Sans KR Medium" Foreground="Black"/>
                    <Grid Grid.Column="2" Grid.Row="1" >
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Border Height="0.5" VerticalAlignment="Top" Background="#FFEBEAE6" Margin="20,0,20,0"/>
                        <Border Height="0.5" VerticalAlignment="Bottom" Background="#FFEBEAE6" Margin="20,0,20,0"/>
                        <ItemsControl ItemsSource="{Binding MusicList}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock Text="{Binding}" Height="20" Foreground="Black"  Margin="20,0,20,0"/>
                                        <Border Height="0.5" VerticalAlignment="Bottom" Background="#FFEBEAE6" Margin="20,0,20,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button Content="List" Style="{StaticResource BroadcastButtonStyle}" Grid.Row="1" HorizontalAlignment="Left" Margin="20,0,0,0" Height="20" Width="60" Background="#FF303451" Foreground="White" FontFamily="Noto Sans KR Medium" />
                        <Button Content="Move" Style="{StaticResource BroadcastButtonStyle}" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,20,0" Height="20" Width="60" Background="#FF373737" Foreground="White" FontFamily="Noto Sans KR Medium" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
