            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="3.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <!-- Prev Button -->
                <Button Grid.Column="0" Style="{StaticResource SubToolbarButtonStyle}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFD0D0D0" HorizontalAlignment="Right" Command="{Binding BackStationButtonCommand}" CommandParameter="{Binding}" IsEnabled="{Binding BackEndabled}" Cursor="Hand">
                    <Grid Background="#00000000" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"  Source="pack://application:,,,/Protocol;component/Image/station_arrow_left.png" Margin="15,0,0,0"/>
                        <TextBlock Grid.Column="1" Text="이전" VerticalAlignment="Center"  FontSize="18" FontFamily="Noto Sans KR Medium" Margin="15,0,15,0" Height="25" ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                    </Grid>
                </Button>

                <!-- Station Name -->
                <ComboBox Name="StationSelectComboBox" Grid.Column="1" Style="{StaticResource StationSelectComboBoxStyle}" Margin="5,10" ItemsSource="{Binding StationList}" SelectedItem="{Binding SelectStation}" FontFamily="Noto Sans KR" FontSize="15" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding StationSelectedButtonCommand}"
                                   CommandParameter="{Binding}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Next Button -->
                <Button Grid.Column="2" Style="{StaticResource SubToolbarButtonStyle}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFD0D0D0" HorizontalAlignment="Left" Command="{Binding NextStationButtonCommand}" CommandParameter="{Binding}" IsEnabled="{Binding NextEndabled}" Cursor="Hand">
                    <Grid Background="#00000000" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="다음" FontSize="18" FontFamily="Noto Sans KR Medium" Margin="15,0,15,0" Height="25" VerticalAlignment="Center"/>
                        <Image Grid.Column="1" Source="pack://application:,,,/Protocol;component/Image/station_arrow_right.png" Margin="0,0,15,0"/>
                    </Grid>
                    
                </Button>

            </Grid>
        </Grid>

        <Grid Grid.Column="2" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>

            <!-- Dashboard -->
            <Button Grid.Column="0" Style="{StaticResource SubToolbarButtonStyle}" Background="#00000000" BorderBrush="{x:Null}" Foreground="#FFD0D0D0" Command="{Binding ViewPanelChangeButtonCommand}" CommandParameter="DASHBOARD" Cursor="Hand">
                <TextBlock Text="Dashboard" VerticalAlignment="Center" FontSize="18" FontFamily="Noto Sans KR Medium" Margin="15,0,15,0" Height="25" />
            </Button>

            <!-- GIS MAP -->
            <Button Grid.Column="1" Style="{StaticResource SubToolbarButtonStyle}" Background="#00000000" BorderBrush="{x:Null}" Foreground="#FFD0D0D0" Command="{Binding ViewPanelChangeButtonCommand}" CommandParameter="GISMAP" Cursor="Hand">
                <TextBlock Text="GIS MAP" VerticalAlignment="Center" FontSize="18" FontFamily="Noto Sans KR Medium" Margin="15,0,15,0" Height="25" />
            </Button>

            <!-- Viewer -->
            <Button Grid.Column="2" Style="{StaticResource SubToolbarButtonStyle}" Background="#00000000" BorderBrush="{x:Null}" Foreground="#FFD0D0D0" Command="{Binding ViewPanelChangeButtonCommand}" CommandParameter="VIEWER" Cursor="Hand">
                <TextBlock Text="Viewer" VerticalAlignment="Center" FontSize="18" FontFamily="Noto Sans KR Medium" Margin="15,0,15,0" Height="25" />
            </Button>

            <!-- Find -->
            <Button Grid.Column="3" Style="{StaticResource SubToolbarButtonStyle}" Background="#00000000" BorderBrush="{x:Null}" Foreground="#FFD0D0D0" Command="{Binding ViewPanelChangeButtonCommand}" CommandParameter="FIND" Cursor="Hand">
                <TextBlock Text="Find" VerticalAlignment="Center" FontSize="18" FontFamily="Noto Sans KR Medium" Margin="15,0,15,0" Height="25" />
            </Button>

            <!-- Home -->
            <Button Grid.Column="4" Style="{StaticResource DefaultButtonStyle}" Background="#FF171F75" BorderBrush="{x:Null}" Foreground="#FFD0D0D0">
                <Image Grid.Column="0" Source="pack://application:,,,/Protocol;component/Image/home_icon.png" Margin="15"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>
