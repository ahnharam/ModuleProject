<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="ConfigCommonTitleWithData">
        <Grid Width="auto" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderThickness="1" BorderBrush="#FF515153" Background="#FF515153" CornerRadius="5 ,0 ,0 ,5">
                <TextBlock Text="{Binding HeaderName}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontFamily="Noto Sans KR" FontSize="14"  Margin="10,0,10,0" MinWidth="60" TextAlignment="Center"/>
            </Border>
            <Border Grid.Column="1" BorderThickness="1" BorderBrush="LightGray" Background="White" CornerRadius="0 ,5 ,5 ,0">
                <TextBlock Text="{Binding ContentName}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontFamily="Noto Sans KR" FontSize="14"  Margin="10,0,10,0"  MinWidth="60" TextAlignment="Center"/>
            </Border>
        </Grid>
    </DataTemplate>
</ResourceDictionary>